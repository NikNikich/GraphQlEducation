{
  "coverageDirectory": "../coverage",
  "globals": {
    "window": {}
  },
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleNameMapper": {
    "^@errors(.*)$": "<rootDir>/errors$1",
    "^@modules(.*)$": "<rootDir>/modules$1",
    "^@shared(.*)$": "<rootDir>/shared$1"
  },
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": "e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "verbose": true,
  "testTimeout": 60000
}
